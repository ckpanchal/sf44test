{% extends 'base.html.twig' %}

{% block title %}Colleague{% endblock %}

{% block body %}
    <h1>Colleague</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ colleague.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ colleague.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ colleague.email }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{% if colleague.fileName is not empty %}
                        <img src="{{ vich_uploader_asset(colleague, 'file') }}" alt="{{ colleague.fileName }}" width="100" height="100" />
                    {% else %}
                        N/A
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ colleague.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('colleague_index') }}" class="btn btn-warning">back to list</a>

    <a href="{{ path('colleague_edit', {'id': colleague.id}) }}" class="btn btn-danger">edit</a>

    {# {{ include('colleague/_delete_form.html.twig') }} #}
{% endblock %}
